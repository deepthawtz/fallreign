!!! Strict
%html{ html_attrs("en_us") }
  %head
    %title ::fall reign::
    %meta{ :content => "text/html;charset=utf-8", "http-equiv" => "Content-Type"}/
    = css_include_tag :reset_fonts_grids
    = css_include_tag :master
    - if session.user
      = js_include_tag :jquery, :application
  
  %body#yui-skin-sam
    #doc.yui-t1
      #hd
        -# %a{ :href => "/" }
        %img#logo{ :src => "/images/fall_reign_logo.jpg", :height => "140px"  }
        -#%img#banner{:src => "/images/fr_header.jpg"}
        %h1 Fall Reign Records
        #menu.yuimenubarnav.yuimenubar
          .bd
            - %w[ home music gallery contact].each do |nav|
              = link_to "#{nav.upcase}", "/#{nav}"
              &nbsp;&nbsp;|&nbsp;&nbsp;
            - if session.user          
              #admin-nug
                = link_to "manage", "/admin"
                = link_to "logout", "/logout"
            - else
              #admin-nug
                = link_to "login", "/login"
      #bd
        #yui-main          
          .yui-b
            - [:error,:success,:notice].each do |type|
              - if message[type]
                %div{:class => type}= message[:type]
            = catch_content :for_layout    

        .yui-b
          .side-nugget
            = catch_content :sidebar_one
          
          %hr
          %br
          %h2 sidebar
          %p
            There is going to be enough room for a side bar right here where we can stuff content in and have it stay there.
          %hr
          .side-nugget
            %h3
              this space for rent
            %br
            %hr
            %br
          .side-nugget
            = catch_content :sidebar_two
            
        
        #ft
          %hr
          %br
          .left
            &nbsp;powered by 
            %a{:href=>"http://merbivore.org"}
              merb 
            &nbsp;&nbsp;|&nbsp;&nbsp;developed by 
            %a{:href=>"http://deepthawtz.net"}
              deepthawtz 
          .right
            &copy; 2008 
            %a{ :href => "/"}
              fall reign&nbsp;&nbsp;
        
