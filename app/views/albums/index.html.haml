#nugget
  = paginated_section @albums do
    - for album in @albums                       
      .chunk
        %a{:href => "albums/#{album.id}"}
          = image_tag album.image.url, :height => "70px"
        %h2
          = album.title
          = album.release_year
          = album.artist.name  
        = album.songs
        %br        
        
= link_to 'Back', url(:albums)     