%h1 Behind the Scenes Control
%br
%br

%h2 Artists
%hr
%table{:class => 'list'}
  %tr
  - for artist in @artists
    %a{:href => "#"}    
      %tr{:class => 'artist'}
        %td
          = image_tag artist.image.url, :height => "50px"
    
        %td
          %strong
            = artist.name
      
        %td{:class => 'small'}
          = link_to 'Show', url(:artist, artist)
        %td{:class => 'small'}
          = link_to 'Edit', url(:edit_artist,  artist)
        %td{:class => 'small'}
          = delete_button artist, 'Delete', :class => 'delete'  
        
= link_to 'New', url(:new_artist)
