!!! XML  
%playlist{ :version => '1', :xmlns=> "http://xspf.org/ns/0/" }
  %trackList                      
    - @songs.each_with_index do |song, number|
      %track                
        %trackNum= number + 1
        %location= song.audio.url
        %creator= song.creator
        %title= song.title
        %album= song.album.title
        %image= song.album.image.url
        %info /music/popout_player